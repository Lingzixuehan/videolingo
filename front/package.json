{
  "name": "my-electron-vue3-ts-app",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k \"tsc -w\" \"vite\" \"wait-on http://localhost:5173 && electron ./dist/main/main.js\"",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron .",
    "pack": "npm run build && electron-builder -c electron-builder.yml",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "electron": "^30.0.0",
    "pinia": "^3.0.3",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/ui": "^2.1.9",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.9.0",
    "jsdom": "^24.1.3",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "vitest": "^2.1.9",
    "wait-on": "^7.0.1"
  }
}
